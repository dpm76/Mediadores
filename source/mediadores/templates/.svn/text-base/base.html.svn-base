{% load i18n %}
<!DOCTYPE html>
<html lang="{{ LANGUAGE_CODE|default:"es-ES" }}">
<head itemscope itemtype="http://schema.org/Product">
	<title>Registro de Mediadores {% block title %}{% endblock %}</title>
	<!-- 
	<meta itemprop="name" content="Mediadores">
	<meta itemprop="description" content="">
	<meta itemprop="image" content="{{ STATIC_DOC_URL|default:"/static-files/" }}">
	-->
	
	<meta http-equiv="content-type" content="text/html; charset=UTF-8">
	<meta name="author" content="(c) DPM Ingenieria SL, 2013">
	<meta name="viewport" content="initial-scale=device-width, user-scalable=yes" />

	<!-- link href="{{ STATIC_DOC_URL|default:"/static-files/" }}icons/favicon.png" rel="shortcut icon" type="image/x-icon" -->
	<link rel="stylesheet" type="text/css" href="{{ STATIC_DOC_URL|default:"/static-files/" }}css/base.css" />
	
	{% block head %}{% endblock %}
</head>
<body>
	<div id="page">
		<div id="header">
			{% include "upper_bar.html" %}
		</div>
		<div id="nav_menu">
			<a class="nav_link" href="/">{% trans 'Inicio' %}</a>{% block nav_path %}{% endblock %}
		</div>
		<div id="content">
			{% block content %}{% endblock %}
		</div>
		<div id="footer">
			<div id="footer-menu">
				<a class="footer_link" href="/">Inicio</a> |
				{% if institution %}
				<a class="footer_link" href="/info/{{ institution.id }}/">Informaci&oacute;n</a> | 
				<a class="footer_link" href="/contact/{{ institution.id }}/">Contacto</a> |
				{% endif %}
				<a class="footer_link" href="/legal/">Aviso legal</a>
			</div>
			<div id="footer-content">
				{% block footer %}{% endblock %}				
			</div>
			
			<div id="footer-logo_camara">
				<p>Es una iniciativa de:</p>
				<a href="http://www.camaradesegovia.es">
					<img src="/static-files/img/logo_Camara_Segovia_medio.png" alt="">
				</a>
			</div>
			<div id="footer-copyright">&copy; <a class="footer_link" href="http://www.camaradesegovia.es">C&aacute;mara de Comercio e Industria de Segovia</a>, 2013</div>
		</div>
	</div>
	<div id="credits">Desarrollado por <a class="credits_link" href="http://www.dpm-ingenieria.es">DPM-Ingenier&iacute;a</a></div>
</body>
</html>