{% extends "base.html" %}
{% load i18n %}

{% block head %}
	{% include "jqueryui-headers.html" %}
	<link rel="stylesheet" href="/static-files/css/forms.css" />
	<link rel="stylesheet" href="/static-files/css/admin_nav_buttons.css" />
	<link rel="stylesheet" href="/static-files/css/degrees.css" />
	<script type="text/javascript">
		$( function(){
			$( "button" ).button();
			$( "#degreesButton" ).prop("disabled","disabled");
			$( "#degreesButton" ).addClass("ui-state-active");
			$( "#degreesButton" ).removeClass("ui-state-disabled");
			$( "#sendButton" ).click(function(event){
				event.preventDefault();
				$("#id_degreesForm").submit();
				return false;
			});
		});
	</script>
{% endblock %}

{% block content %}
	<h1>Administraci&oacute;n</h1>
	{% include "main/admin_nav_buttons.html" %}
	<p class="verbose">
	Puede modificar las titulaciones o a&ntilde;adir nuevas usando los
	espacios vac&iacute;os del final del formulario.
	</p>
	<form id="id_degreesForm" class="centered" name="degreesForm" method="post" action=".">
		{% csrf_token %}
		{% include "formset_tabular.html" %}
		<div id="buttonsArea">
			<button id="sendButton">Guardar</button>
		</div>
	</form>
{% endblock %}