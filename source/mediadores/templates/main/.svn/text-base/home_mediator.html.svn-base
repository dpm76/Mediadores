{% extends "main/edit_mediator.html" %}
{% load i18n %}

{% block extraCSS %}
	<link rel="stylesheet" href="/static-files/css/home_mediator.css" />
{% endblock %}

{% block scriptInit %}
	//$("#id_insuranceEntity, #id_insuranceContract, #id_insuranceExpiration").prop("disabled", true);
	$("#id_expertiseArea, #id_degree ").multiselect({sortable:false});
	{% if dataUpdated %}
	$("#updatedDlg").dialog({
		modal: true,
		buttons: {
			Ok: function(){
				$(this).dialog("close");
			}
		}
	});
	{% endif %}
{% endblock %}

{% block nav_path %}
{% endblock %}

{% block nonEditableFields %}
	<div id="insuranceData">
		<table>
			<tr><th>Entidad aseguradora:</th><td>{{ mediator.insuranceEntity.name }}</td></tr>
			<tr><th>P&oacute;liza:</th><td>{{ mediator.insuranceContract }}</td></tr>
			<tr><th>Expiraci&oacute;n de la p&oacute;liza:</th><td>{{ mediator.insuranceExpiration }}</td></tr>
			<tr><td colspan="2">
				<p class="helptext">
					Los datos relacionados con el seguro de responsabilidad no pueden ser editados directamente. 
					Para cualquier actualizaci&oacute;n o rectificaci&oacute; de los mismos, por favor, dir&iacute;jase a la 
					Entidad Mediadora en la que sus datos est&aacute;n registrados.
				</p>
			</td></tr>
		</table>
	</div>
{% endblock %}

{% block afterForm %}
	{% if dataUpdated %}
		<div id="updatedDlg" title="Datos guardados">
			<p>
				<span class="ui-icon ui-icon-info"></span>
				Sus datos han sido guardados en nuestro sistema.
			</p>
		</div>
	{% endif %}
{% endblock %}